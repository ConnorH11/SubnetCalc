@page
@model SubnetCalc.Pages.converterModel
@{
    ViewData["Title"] = "Binary/Hex/Decimal Converter";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Binary / Hex / Decimal Converter</h2>

    <div class="mb-3 row">
        <label for="inputValue" class="col-sm-2 col-form-label">Enter Value:</label>
        <div class="col-sm-10">
            <input type="text" id="inputValue" class="form-control" placeholder="e.g. 255 or FF or 11111111">
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Input Format:</label>
        <div class="col-sm-10">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inputFormat" id="formatDecimal" value="decimal" checked>
                <label class="form-check-label" for="formatDecimal">Decimal</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inputFormat" id="formatHex" value="hex">
                <label class="form-check-label" for="formatHex">Hexadecimal</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inputFormat" id="formatBinary" value="binary">
                <label class="form-check-label" for="formatBinary">Binary</label>
            </div>
        </div>
    </div>

    <button id="convertBtn" class="btn btn-primary mb-4">Convert</button>

    <div id="conversionResults" class="mt-4"></div>
</div>

@section Scripts {
    <script src="~/js/converter.js"></script>
}
