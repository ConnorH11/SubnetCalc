@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Subnet Calculator</h1>
        <p class="lead">The ultimate tool for all your subnetting needs.</p>
        <p>Made by Connor Horning</p>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Subnet Calculator</h5>
                    <p class="card-text">Calculate network information for an IP address and subnet mask.</p>
                    <a href="/IPSubnet" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">VLSM Planner</h5>
                    <p class="card-text">Perform Variable Length Subnet Masking for efficient subnet allocation.</p>
                    <a href="/VLSM" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Supernetting Tool</h5>
                    <p class="card-text">Combine multiple subnets into a larger network.</p>
                    <a href="/supernetting" class="btn btn-primary">Launch</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Practice Questions</h5>
                    <p class="card-text">Test your subnetting skills with interactive questions.</p>
                    <a href="/Practice" class="btn btn-primary">Practice</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Visual Network Tool</h5>
                    <p class="card-text">Create graphical representations of your subnetted networks.</p>
                    <a href="/Visualize" class="btn btn-primary">Visualize</a>
                </div>
            </div>
        </div>
    </div>
</div>
